{
  "name": "Save Tabs",
  "version": "1.0",
  "manifest_version": 2,
  "icons": {
    "16": "assets/icons/icon_16.png",
    "32": "assets/icons/icon_32.png",
    "48": "assets/icons/icon_48.png",
    "128": "assets/icons/icon_128.png"
  },
  "browser_action": {
    "default_popup": "index.html"
  },
  "background": {
    "scripts": [
      "background.js",
      "runtime.js"
    ],
    "persistent": true
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "offline_enabled": true
}
