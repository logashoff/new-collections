{
  "name": "new-collections",
  "description": "Browser extension to save and restore tabs",
  "version": "1.18",
  "private": true,
  "scripts": {
    "build:dev": "ng build --configuration development",
    "build:e2e": "ng build --configuration e2e",
    "build:service": "esbuild ./src/background.ts --legal-comments=none --bundle --outfile=./dist/new-collections/background.js",
    "build": "ng build --configuration production --output-hashing none",
    "e2e": "yarn build:e2e && yarn vitest",
    "fmt": "git diff --name-only --diff-filter=d | grep -E \"\\.ts$|\\.json$|\\.html$|\\.scss$\" | xargs prettier -w",
    "lint": "ng lint && stylelint ./src/**/*.scss",
    "postbuild:dev": "yarn build:service",
    "postbuild:e2e": "yarn build:service",
    "postbuild": "yarn build:service --minify",
    "test": "ng test"
  },
  "engines": {
    "yarn": "^1.22.17",
    "npm": "Please use Yarn instead of NPM to install dependencies. See: https://yarnpkg.com/lang/en/docs/install/"
  },
  "dependencies": {
    "@angular/animations": "^21.0.6",
    "@angular/cdk": "^21.0.5",
    "@angular/common": "^21.0.6",
    "@angular/compiler": "^21.0.6",
    "@angular/core": "^21.0.6",
    "@angular/forms": "^21.0.6",
    "@angular/material": "^21.0.5",
    "@angular/platform-browser": "^21.0.6",
    "@angular/platform-browser-dynamic": "^21.0.6",
    "@angular/router": "^21.0.6",
    "date-fns": "^4.1.0",
    "fuse.js": "^7.1.0",
    "lodash-es": "^4.17.22",
    "normalize-url": "^8.1.0",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.2100.4",
    "@angular-eslint/builder": "^21.1.0",
    "@angular-eslint/eslint-plugin": "^21.1.0",
    "@angular-eslint/eslint-plugin-template": "^21.1.0",
    "@angular-eslint/schematics": "^21.1.0",
    "@angular-eslint/template-parser": "^21.1.0",
    "@angular/build": "^21.0.4",
    "@angular/cli": "^21.0.4",
    "@angular/compiler-cli": "^21.0.6",
    "@angular/language-service": "^21.0.6",
    "@ngneat/spectator": "^22.1.0",
    "@types/chrome": "^0.1.32",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "@vitest/coverage-v8": "3.2.4",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "jsdom": "^27.3.0",
    "lodash": "^4.17.21",
    "ng-packagr": "^21.0.1",
    "prettier": "^3.7.4",
    "puppeteer": "^24.34.0",
    "stylelint": "^16.26.1",
    "stylelint-config-sass-guidelines": "^12.1.0",
    "typescript": "5.9.3",
    "vitest": "3.2.4",
    "vitest-puppeteer": "^11.0.3"
  }
}
