{
  "name": "new-collections",
  "description": "Browser extension to save and restore tabs",
  "version": "1.18",
  "private": true,
  "scripts": {
    "build:dev": "ng build --configuration development",
    "build:e2e": "ng build --configuration e2e",
    "build:service": "esbuild ./src/background.ts --legal-comments=none --bundle --outfile=./dist/new-collections/background.js",
    "build": "ng build --configuration production --output-hashing none",
    "e2e": "yarn build:e2e && yarn vitest",
    "fmt": "git diff --name-only --diff-filter=d | grep -E \"\\.ts$|\\.json$|\\.html$|\\.scss$\" | xargs prettier -w",
    "lint": "ng lint && stylelint ./src/**/*.scss",
    "postbuild:dev": "yarn build:service",
    "postbuild:e2e": "yarn build:service",
    "postbuild": "yarn build:service --minify",
    "test": "ng test"
  },
  "engines": {
    "yarn": "^1.22.17",
    "npm": "Please use Yarn instead of NPM to install dependencies. See: https://yarnpkg.com/lang/en/docs/install/"
  },
  "dependencies": {
    "@angular/animations": "^20.3.11",
    "@angular/cdk": "^20.2.13",
    "@angular/common": "^20.3.11",
    "@angular/compiler": "^20.3.11",
    "@angular/core": "^20.3.11",
    "@angular/forms": "^20.3.11",
    "@angular/material": "^20.2.13",
    "@angular/platform-browser": "^20.3.11",
    "@angular/platform-browser-dynamic": "^20.3.11",
    "@angular/router": "^20.3.11",
    "date-fns": "^4.1.0",
    "fuse.js": "^7.1.0",
    "lodash-es": "^4.17.21",
    "normalize-url": "^8.1.0",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.2003.10",
    "@angular-eslint/builder": "^20.6.0",
    "@angular-eslint/eslint-plugin": "^20.6.0",
    "@angular-eslint/eslint-plugin-template": "^20.6.0",
    "@angular-eslint/schematics": "^20.6.0",
    "@angular-eslint/template-parser": "^20.6.0",
    "@angular/build": "^20.3.10",
    "@angular/cli": "^20.3.10",
    "@angular/compiler-cli": "^20.3.11",
    "@angular/language-service": "^20.3.11",
    "@ngneat/spectator": "^22.1.0",
    "@types/chrome": "^0.1.28",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitest/coverage-v8": "^4.0.8",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "jsdom": "^27.2.0",
    "lodash": "^4.17.21",
    "ng-packagr": "^20.3.2",
    "prettier": "^3.6.2",
    "puppeteer": "^24.30.0",
    "stylelint": "^16.25.0",
    "stylelint-config-sass-guidelines": "^12.1.0",
    "typescript": "5.9.3",
    "vitest": "3.2.4",
    "vitest-puppeteer": "^11.0.3"
  }
}
